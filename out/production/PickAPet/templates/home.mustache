<html>
<body>
<script type="text/javascript">
   function isChecked(q) {
       var arr = document.getElementsByName(q);
       for (var i = 0; i < arr.length; i++) {
           if (arr[i].checked) {
               return true;
           }
       }
       return false;
   }
//todo: need to change the requirements here
   function checkAll() {
       var qNames = ["attention", "energy", "exercise", "size", "space", "outdoor", "friendliness", "kids", "sheds"]
       for (var i = 0; i < 9; i++) {
           if (!isChecked(qNames [i])) {
               alert ('Please fill out all the questions before submitting.');
               return false;
           }
       }
       return true;
   }

</script>

